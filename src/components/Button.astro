---
const { label, href, variant = 'primary', classes } = Astro.props

const baseStyles = 'inline-block px-5 py-4 text-center -tracking-[0.64px] font-medium rounded-sm transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2'
const variants = {
  primary: 'bg-primary text-white focus-visible:ring-primary',
  secondary: 'bg-white text-black focus-visible:ring-gray-400',
}

const className = `${classes} ${baseStyles} ${variants[variant] || variants.primary}`
---

<a href={href} class={className}>
  {label}
</a>
