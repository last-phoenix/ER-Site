---
const { label, href, variant = 'primary', classes } = Astro.props

const baseStyles = 'inline-block px-5 py-4 text-center -tracking-[0.64px] font-medium rounded-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg'
const variants = {
  primary: 'bg-primary text-white',
  secondary: 'bg-white text-black',
}

const className = `${classes} ${baseStyles} ${variants[variant] || variants.primary}`
---

<a href={href} class={className}>
  {label}
</a>
